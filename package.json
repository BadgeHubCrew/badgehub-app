{
  "name": "badgehub-api",
  "version": "1.0.0",
  "description": "Node project for the BadgeHub API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "install:container": "docker exec -it badgehub-api-node-1 npm install",
    "start": "node dist/index.js",
    "build": "tsc",
    "openapi": "tsoa spec-and-routes",
    "dev": "concurrently 'tsc --watch' 'node --watch dist/index.js'",
    "backup": "docker exec -it badgehub-api-db-1 /usr/bin/pg_dump --username badgehub badgehub -f /var/backup/data-backup-`date +\"%Y-%m-%dT%H:%m\"`.sql",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "pg": "^8.11.5",
    "pm2": "^5.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.1",
    "typescript": "^5.4.5"
  }
}
