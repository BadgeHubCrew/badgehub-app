{
  "name": "badgehub-api",
  "version": "1.0.0",
  "description": "Node project for the BadgeHub API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "install:container": "docker exec -it badgehub-api-node-1 npm install",
    "start": "node dist/index.js",
    "monitor": "docker exec -it badgehub-api-node-1 npx pm2 monit",
    "lint": "pretty-quick --check",
    "build": "tsc",
    "swagger": "tsoa spec-and-routes",
    "dev": "node --import tsx --watch src/index.ts",
    "backup": "docker exec -it badgehub-api-db-1 /usr/bin/pg_dump --username badgehub badgehub -f /var/backup/data-backup-`date +\"%Y-%m-%dT%H:%m\"`.sql",
    "test": "vitest",
    "prepare": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.0",
    "pg": "^8.12.0",
    "pm2": "^5.4.2",
    "pino-http": "^10.3.0",
    "tsoa": "^6.4.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}
