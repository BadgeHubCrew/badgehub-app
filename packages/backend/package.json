{
  "name": "badgehub-api",
  "version": "1.0.0",
  "description": "Node project for the BadgeHub API",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.mjs",
    "start:pm2": "pm2-runtime process.json",
    "build": "node --experimental-strip-types esbuild/esbuild.config.ts",
    "check:ts": "tsc --noEmit -p tsconfig.json",
    "dev": "node --watch --import tsx src/index.ts",
    "repopulate-db": "node --import tsx src/dev/runPopulateDB.ts",
    "test-db:up": "docker compose -f docker-compose.test-db.yml up -d",
    "test-db:down": "docker compose -f docker-compose.test-db.yml down",
    "backup": "docker exec -it badgehub-db /usr/bin/pg_dump --username badgehub badgehub -f /var/backup/data-backup-`date +\"%Y-%m-%dT%H:%m\"`.sql",
    "test": "vitest run --coverage.enabled true",
    "test:watch": "vitest watch --coverage.enabled true",
    "db-migrate:up": "db-migrate up",
    "db-migrate:down": "db-migrate down",
    "db-migrate:create": "db-migrate create --sql-file true",
    "mqtt-monitor": "node --env-file=.env src/util/mqtt-monitor.js "
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@ts-rest/core": "^3.53.0-rc.1",
    "@ts-rest/express": "^3.53.0-rc.1",
    "@ts-rest/open-api": "^3.53.0-rc.1",
    "@types/lodash": "^4.17.20",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "jose": "^5.9.6",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "moment": "^2.30.1",
    "mqtt": "^5.14.0",
    "multer": "^2.0.2",
    "openapi3-ts": "^2.0.2",
    "pg": "^8.11.5",
    "pino-http": "^10.1.0",
    "pm2": "^5.4.0",
    "sharp": "^0.34.3",
    "sql-template-tag": "^5.2.1",
    "swagger-ui-express": "^5.0.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.0",
    "typescript": "^5.8.3",
    "zod": "^3.25.34"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.6",
    "@types/pg": "^8.11.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/coverage-v8": "^3.1.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.2",
    "esbuild-plugin-tsc": "^0.4.0",
    "supertest": "^7.0.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^3.1.1"
  }
}
