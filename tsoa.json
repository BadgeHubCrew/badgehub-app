{
  "entryFile": "src/index.ts",
  "controllerPathGlobs": ["src/controllers/**/*-rest.ts"],
  "noImplicitAdditionalProperties": "throw-on-extras",
  "compilerOptions": {
    "paths": {
      "@*": ["./src/*"]
    }
  },
  "spec": {
    "outputDirectory": "public",
    "version": "3",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "src/generated",
    "esm": true,
    "authenticationModule": "./authentication.ts"
  },
  "securityDefinitions": {
    "bearer": {
      "type": "http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  }
}
